<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base APP theme. -->
    <style name="Theme.ECO100" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_variant</item>
        <item name="colorOnPrimary">@color/primary_on_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_color</item>
        <item name="colorSecondaryVariant">@color/secondary_color</item>
        <item name="colorOnSecondary">@color/secondary_on_color</item>

        <!-- Background color -->
        <item name="colorOnBackground">#ffffff</item>

        <!-- StatusBar -->
        <item name="android:windowLightStatusBar">true</item>

        <!-- My badge dialog -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <!-- Main Title Style-->
    <style name="Main.TitleStyle" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/main_title</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="fontFamily">@font/main_title_font</item>
        <item name="android:includeFontPadding">true</item>
    </style>

    <!-- TabItem Text Style -->
    <style name="Tab.TextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/mapo_peacefull</item>
    </style>

    <!-- Tab Style -->
    <style name="TabLayout.ItemStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorGravity">top</item>
        <item name="tabIndicatorHeight">@dimen/size_4dp</item>
        <item name="tabIndicatorColor">@color/primary_color</item>
        <item name="tabIconTint">@color/tab_icon_color_selector</item>
        <item name="tabTextAppearance">@style/Tab.TextStyle</item>
    </style>

    <!-- Common Popup Style -->
    <style name="CommonPopup.TitleStyle" parent="android:TextAppearance">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">@dimen/popup_title</item>
        <item name="android:fontFamily">@font/mapo_peacefull</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommonPopup.TextStyle" parent="android:TextAppearance">
        <item name="android:textColor">#80151920</item>
        <item name="android:textSize">@dimen/popup_text</item>
    </style>

    <!-- Common Popup Left Btn Style -->
    <style name="CommonPopup.BtnLeftTextStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/mapo_peacefull</item>
        <item name="android:background">@drawable/popup_btn_left</item>
        <item name="android:textColor">@color/popup_btn_left_text_color</item>
        <item name="android:layout_marginStart">@dimen/margin_24dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/popup_text</item>
    </style>

    <!-- Common Popup Right Btn Style -->
    <style name="CommonPopup.BtnRightTextStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/mapo_peacefull</item>
        <item name="android:background">@drawable/popup_btn_right</item>
        <item name="android:textColor">@color/popup_btn_right_text_color</item>
        <item name="android:layout_marginEnd">@dimen/margin_24dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/popup_text</item>
    </style>

    <!--Internet Connect Dialog Button Style -->
    <style name="AlertDialog.AppCompat.BtnConfirmTextStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/mapo_peacefull</item>
        <item name="android:background">@drawable/popup_btn_right</item>
        <item name="android:textColor">@color/popup_btn_right_text_color</item>
        <item name="android:layout_marginEnd">@dimen/margin_24dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/popup_text</item>
    </style>

    <!-- splash theme -->
    <style name="SplashTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="LBSMapTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/my_badge_dialog_background</item>
    </style>

</resources>