<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/ecobox_margin_30dp"
    android:layout_marginLeft="@dimen/margin_24dp"
    android:orientation="vertical"
    >


        <ImageView
            android:id="@+id/content_imageView"
            android:layout_width="@dimen/ecobox_size_152dp"
            android:layout_height="@dimen/ecobox_size_152dp"
            android:background="@drawable/square_background_border"
            android:padding="@dimen/padding_8dp"
            app:srcCompat="@drawable/ecobox_content_documentary2"
            android:contentDescription="@string/content_banner_description" />

        <TextView
            android:id="@+id/content_category"
            android:layout_width="@dimen/ecobox_size_166dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_4dp"
            android:fontFamily="@font/mapo_peacefull"
            android:text="@string/content_category"
            android:textSize="@dimen/ecobox_content_category"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/content_title"
            android:layout_width="@dimen/ecobox_size_166dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mapo_peacefull"
            android:text="@string/content_title"
            android:textSize="@dimen/ecobox_content_title"
            android:textColor="@color/black"
            android:textStyle="bold" />

</LinearLayout>