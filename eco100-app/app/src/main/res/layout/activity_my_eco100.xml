<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".views.myeco.MyCommentListActivity">

    <ImageView
        android:layout_width="374dp"
        android:layout_height="@dimen/size_60dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_12dp"
        app:srcCompat="@drawable/my_eco_title" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="227dp"
                android:layout_height="210dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/my_eco_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/size_72dp"
                    android:layout_height="@dimen/size_88dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/my_eco_team5" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/size_72dp"
                    android:layout_height="@dimen/size_88dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/my_eco_team4" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="@dimen/size_72dp"
                    android:layout_height="@dimen/size_88dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/my_eco_team3" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="@dimen/size_72dp"
                    android:layout_height="@dimen/size_88dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/my_eco_team2" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="@dimen/size_72dp"
                    android:layout_height="@dimen/size_88dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/my_eco_team1" />
            </LinearLayout>

            <TextView
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_30dp"
                android:fontFamily="@font/mapo_peacefull"
                android:text="@string/mypage_eco100_info"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/size_16dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_10dp"
                android:fontFamily="@font/mapo_peacefull"
                android:text="@string/mypage_eco100_info1"
                android:textSize="@dimen/size_14dp" />

            <TextView
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_12dp"
                android:fontFamily="@font/mapo_peacefull"
                android:text="@string/mypage_eco100_info2"
                android:textSize="@dimen/size_14dp" />

            <TextView
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_12dp"
                android:fontFamily="@font/mapo_peacefull"
                android:text="@string/mypage_eco100_info3"
                android:textSize="@dimen/size_14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="112dp"
                android:background="@drawable/ch_back_frame" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>