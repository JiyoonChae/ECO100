<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12dp"
                android:layout_marginLeft="@dimen/margin_32dp"
                android:layout_marginRight="@dimen/margin_32dp"
                android:layout_marginBottom="@dimen/margin_12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_paper"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/btn_paper_ic_description"
                        android:drawableTop="@drawable/ic_ecobox_paper"
                        android:text="@string/ecobox_paper"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mapo_peacefull"/>

                    <Button
                        android:id="@+id/btn_glass"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/btn_glass_ic_description"
                        android:drawableTop="@drawable/ic_ecobox_glass"
                        android:paddingLeft="@dimen/padding_10dp"
                        android:paddingRight="@dimen/padding_32dp"
                        android:text="@string/ecobox_glass"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mapo_peacefull"/>

                    <Button
                        android:id="@+id/btn_plastic"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/btn_plastic_ic_description"
                        android:drawableTop="@drawable/ic_ecobox_plastic"
                        android:text="@string/ecobox_plastic"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mapo_peacefull"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_can"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/btn_can_ic_description"
                        android:drawableTop="@drawable/ic_ecobox_can"
                        android:text="@string/ecobox_can"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mapo_peacefull"/>

                    <Button
                        android:id="@+id/btn_vinyl"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/btn_vinyl_ic_description"
                        android:drawableTop="@drawable/ic_ecobox_vinyl"
                        android:paddingLeft="@dimen/padding_24dp"
                        android:paddingRight="@dimen/padding_10dp"
                        android:text="@string/ecobox_vinyl"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mapo_peacefull"/>

                    <Button
                        android:id="@+id/btn_styrofoam"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/btn_styrofoam_ic_description"
                        android:drawableTop="@drawable/ic_ecobox_styrofoam"
                        android:text="@string/ecobox_styrofoam"
                        android:textAlignment="textEnd"
                        android:textColor="@color/black"
                        android:fontFamily="@font/mapo_peacefull"/>
                </LinearLayout>


            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color_dark"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/faq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4dp"
            android:layout_marginLeft="@dimen/margin_36dp"
            android:layout_marginRight="@dimen/ecobox_margin_112dp"
            android:layout_marginBottom="@dimen/margin_12dp"
            android:text="@string/ecobox_faq"
            android:textColor="@color/white"
            android:textSize="@dimen/home_dialog_title"
            android:textStyle="bold"
            android:fontFamily="@font/mapo_peacefull"/>

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="@dimen/ecobox_size_153dp"
            android:layout_height="wrap_content"
            android:autofillHints="username"
            android:backgroundTint="@color/white"
            android:ems="8"
            android:inputType="textNoSuggestions"
            android:textColor="@color/white"
            tools:ignore="LabelFor"></EditText>


        <ImageView
            android:id="@+id/search_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:layout_marginBottom="@dimen/margin_12dp"
            android:layout_gravity="bottom"
            app:srcCompat="@drawable/ic_search_28"
            android:contentDescription="@string/faq_ic_description"/>


    </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ecobox_faq_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

</LinearLayout>


