<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ecobox.ZeroshopDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/ecobox_margin_26dp"
        android:orientation="vertical">

            <TextView
                android:id="@+id/zeroshop_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ecobox_margin_26dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:fontFamily="@font/mapo_peacefull"
                android:text=""
                android:textColor="@color/point_color"
                android:textSize="@dimen/ecobox_content_category"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/zeroshop_detail_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ecobox_margin_26dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginBottom="@dimen/margin_24dp"
                android:fontFamily="@font/mapo_peacefull"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/ecobox_content_detail_title"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/zeroshop_detail_imageView"
                android:layout_width="@dimen/size_360dp"
                android:layout_height="@dimen/size_360dp"
                android:layout_marginStart="@dimen/ecobox_margin_26dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:background="@drawable/square_background_border_zeroshop"
                android:contentDescription="@string/content_image_description"
                android:padding="9dp"
                app:srcCompat="@drawable/ecobox_content_documentary2" />

            <TextView
                android:id="@+id/zeroshop_detail_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ecobox_margin_26dp"
                android:layout_marginTop="@dimen/margin_12dp"
                android:fontFamily="@font/mapo_peacefull"
                android:text="@string/content_detail_info_title"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/ecobox_content_detail_text" />

            <TextView
                android:id="@+id/phoneNum_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ecobox_margin_26dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:drawablePadding="@dimen/padding_20dp"
                android:fontFamily="@font/mapo_peacefull"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/ecobox_content_detail_text"
                app:drawableLeftCompat="@drawable/ic_zeroshop_phonenum" />

            <TextView
                android:id="@+id/adress_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ecobox_margin_26dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:drawablePadding="@dimen/padding_20dp"
                android:fontFamily="@font/mapo_peacefull"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/ecobox_content_detail_text"
                app:drawableLeftCompat="@drawable/ic_zeroshop_adress" />

            <TextView
                android:id="@+id/runinfo_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ecobox_margin_26dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:drawablePadding="@dimen/padding_20dp"
                android:fontFamily="@font/mapo_peacefull"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/ecobox_content_detail_text"
                app:drawableLeftCompat="@drawable/ic_zeroshop_adress" />

            <TextView
                android:id="@+id/website_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ecobox_margin_26dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:drawablePadding="@dimen/padding_20dp"
                android:fontFamily="@font/mapo_peacefull"
                android:linksClickable="true"
                android:text=""
                android:textColor="@color/point_color"
                android:textSize="@dimen/ecobox_content_detail_text"
                app:drawableLeftCompat="@drawable/ic_zeroshop_runinfo" />

            <TextView
                android:id="@+id/content_detail_site_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ecobox_margin_26dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:fontFamily="@font/mapo_peacefull"
                android:text="@string/zeroshop_detail_site_guide"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/ecobox_content_detail_text" />

            <TextView
                android:id="@+id/content_detail_map_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ecobox_margin_26dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:bufferType="spannable"
                android:fontFamily="@font/mapo_peacefull"
                android:text="@string/zeroshop_detail_map_guide"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/ecobox_content_detail_text" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/zeroshop_floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginStart="@dimen/ecobox_margin_26dp"
                android:layout_marginTop="@dimen/margin_20dp"
                android:layout_marginEnd="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_24dp"
                android:backgroundTint="@color/point_color"
                android:clickable="true"
                android:contentDescription="@string/content_floatingBtn_description"
                android:focusable="true"
                app:borderWidth="0dp"
                app:elevation="@dimen/size_10dp"
                app:fabSize="normal"
                app:srcCompat="@drawable/ecobox_zeroshop_link_btn"
                app:tint="@android:color/white" />

    </LinearLayout>

</ScrollView>