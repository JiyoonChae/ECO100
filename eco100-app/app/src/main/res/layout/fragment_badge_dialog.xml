<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:orientation="vertical"
    tools:context=".views.myeco.BadgeDialogFragment"

    app:behavior_hideable="false"
    app:behavior_peekHeight="230dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <ImageView
        android:id="@+id/badge_img"
        android:layout_width="@dimen/size_102dp"
        android:layout_height="@dimen/size_102dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_30dp"
        android:layout_marginBottom="@dimen/margin_10dp"/>

    <TextView
        android:id="@+id/badge_text"
        android:layout_width="350dp"
        android:layout_height="@dimen/size_60dp"
        android:layout_gravity="center"
        android:text="에코백 가입을 환영합니다!\n 다양한 활동을 함께해요"
        android:gravity="center"
        android:background="@drawable/badge_text_frame"
        android:layout_marginBottom="@dimen/margin_20dp"/>

</LinearLayout>