<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_82dp"
    android:layout_marginHorizontal="@dimen/margin_20dp"
    android:layout_marginTop="@dimen/margin_24dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/shopImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/img_map_list_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:fontFamily="@font/mapo_peacefull"
            android:text="알맹상점"
            android:textColor="@color/point_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shopDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:fontFamily="@font/mapo_peacefull"
            android:text="껍데기는 가라! 알맹이만 오라! 리필스테이션"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shopAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginBottom="@dimen/margin_22dp"
            android:fontFamily="@font/mapo_peacefull"
            android:text="서울 마포구 월드컵로 49 2층, 알맹상점"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="#E8E8E8" />

    </LinearLayout>

</LinearLayout>