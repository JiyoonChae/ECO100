<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_20dp"
    android:layout_marginTop="@dimen/margin_24dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/shopImg"
        android:layout_width="@dimen/size_50dp"
        android:layout_height="@dimen/size_50dp"
        android:src="@drawable/img_map_list_item" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shopName"
            style="@style/Map.BottomSheetListTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/map_list_shop_name_ex" />

        <TextView
            android:id="@+id/shopDescription"
            style="@style/Map.BottomSheetListText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/map_list_shop_description_ex" />

        <TextView
            android:id="@+id/shopAddress"
            style="@style/Map.BottomSheetListText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_22dp"
            android:text="@string/map_list_shop_address_ex" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/list_line_color" />

    </LinearLayout>

</LinearLayout>