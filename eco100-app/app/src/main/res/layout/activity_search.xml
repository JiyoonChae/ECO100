<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.search.SearchActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_8dp"
        android:background="@color/secondary_on_color" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/mapo_peacefull"
        android:text="Search ECO!"
        android:textColor="@color/primary_color"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_52dp"
        android:layout_marginHorizontal="34dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:orientation="horizontal">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="검색어를 입력해주세요 :)" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="@dimen/size_36dp"
            android:layout_height="@dimen/size_36dp"
            android:background="@drawable/ic_serach_bar" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="분리요령" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="참여게시판" />
    </com.google.android.material.tabs.TabLayout>

    <ImageView
        android:layout_width="@dimen/size_160dp"
        android:layout_height="@dimen/size_160dp"
        android:layout_gravity="center"
        android:layout_marginTop="92dp"
        android:contentDescription="@string/string_value"
        android:src="@drawable/img_serach" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:fontFamily="@font/mapo_peacefull"
        android:text="SEARCH ECO INFORMATION"
        android:textAlignment="center"
        android:textColor="@color/primary_color"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/mapo_peacefull"
        android:text="환경에 관한 정보를 검색해주세요.\n검색창에 원하는 키워드를 입력하면\n분리요령과 커뮤니티 게시글, 각가 2가지 탭에서\n관련 정보를 확인할 수 있습니다."
        android:textAlignment="center" />
</LinearLayout>