<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size_330dp"
    android:layout_height="@dimen/size_380dp"
    android:background="@drawable/common_popup_background">

    <TextView
        style="@style/CommonPopup.TitleStyle"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:gravity="center"
        android:text="@string/dialog_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/CommonPopup.TextStyle"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_70dp"
        android:text="@string/dialog_text"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="147dp"
        android:layout_marginTop="132.95dp"
        android:src="@drawable/img_dialog_wifi_error"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110.5dp"
        android:layout_marginTop="175.23dp"
        android:src="@drawable/img_duck_with_question_mark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/dialog_frame_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="258dp">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/AlertDialog.AppCompat.BtnConfirmTextStyle"
            android:id="@+id/ok_btn"
            android:layout_width="284dp"
            android:layout_height="42dp"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="18.73dp"
            android:text="@string/popup_confirm"
            />

        <ImageView
            android:layout_width="38.74dp"
            android:layout_height="39.6dp"
            android:layout_marginEnd="36.26dp"
            android:layout_marginBottom="44.9dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/img_popup_btn_ecoduck"
            />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>