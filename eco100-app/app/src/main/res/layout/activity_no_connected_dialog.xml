<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size_330dp"
    android:layout_height="@dimen/size_380dp"
    android:background="@drawable/common_popup_background"
    android:orientation="vertical">

    <TextView
        style="@style/CommonPopup.TitleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_54dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:gravity="center"
        android:text="@string/dialog_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/CommonPopup.TextStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        android:gravity="center"

        android:text="@string/dialog_text"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_148dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:src="@drawable/img_dialog_wifi_error" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_110dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:src="@drawable/img_duck_with_question_mark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/dialog_frame_layout"
        android:layout_width="@dimen/size_330dp"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ok_btn"
            style="@style/AlertDialog.AppCompat.BtnConfirmTextStyle"
            android:layout_width="@dimen/size_284dp"
            android:layout_height="@dimen/size_42dp"
            android:layout_marginStart="@dimen/margin_24dp"
            android:layout_marginBottom="@dimen/margin_18dp"
            android:text="@string/popup_confirm" />

        <ImageView
            android:layout_width="@dimen/size_38dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="@dimen/margin_36dp"
            android:layout_marginBottom="@dimen/margin_44dp"
            android:src="@drawable/img_popup_btn_ecoduck" />

    </FrameLayout>

</LinearLayout>