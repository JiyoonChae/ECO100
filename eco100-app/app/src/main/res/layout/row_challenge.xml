<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">


        <ImageView
            android:id="@+id/rowImageView"
            android:layout_width="@dimen/size_48dp"
            android:layout_height="@dimen/size_48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="18dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/rowTextView"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="27dp"
            android:layout_toStartOf="@+id/rowStamp1"
            android:layout_toEndOf="@+id/rowImageView"
            android:layout_weight="2"
            android:text="TextView"
            android:textColor="#CC000000"
            android:textSize="@dimen/text_normal" />

        <ImageView
            android:id="@+id/rowStamp1"
            android:layout_width="@dimen/size_48dp"
            android:layout_height="@dimen/size_48dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/rowStamp2"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <ImageView
            android:id="@+id/rowStamp2"
            android:layout_width="@dimen/size_48dp"
            android:layout_height="@dimen/size_48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="11dp"
            app:srcCompat="@mipmap/ic_launcher" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        android:background="#1F000000"
        android:layout_marginLeft="@dimen/size_64dp"/>
</LinearLayout>