<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.splash.SplashActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/splashImg"
            android:layout_width="166dp"
            android:layout_height="174dp"
            android:contentDescription="@string/string_value" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splashImg"
            android:layout_marginTop="@dimen/margin_8dp"
            android:fontFamily="@font/mapo_peacefull"
            android:text="지구를 위한 작은 실천\n함께 해요:)"
            android:textAlignment="center"
            android:textColor="@color/primary_color"
            android:textSize="24sp" />
    </LinearLayout>
</RelativeLayout>