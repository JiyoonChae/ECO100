<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.community.EnrollActivity">

    <EditText
        android:id="@+id/enroll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="제목"
        android:inputType="textPersonName" />

    <ImageView
        android:id="@+id/enroll_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_160dp"
        android:layout_margin="@dimen/margin_16dp"
        android:src="@drawable/icon_add_picture"/>

    <Button
        android:id="@+id/image_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이미지삭제" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:background="@drawable/ic_boarderline"
            android:id="@+id/enroll_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:hint="내용을 작성해 주세요"

            android:gravity="top"
            android:layout_weight="100"
            android:layout_margin="@dimen/margin_16dp"
            android:padding="@dimen/padding_8dp"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="등록" />
    </LinearLayout>

</LinearLayout>