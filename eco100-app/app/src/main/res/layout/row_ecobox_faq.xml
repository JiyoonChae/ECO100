<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/qmarkImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_32dp"
            android:paddingTop="@dimen/padding_20dp"
            android:paddingRight="@dimen/padding_32dp"
            android:paddingBottom="@dimen/padding_20dp"
            app:srcCompat="@drawable/ic_ecobox_qmark" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/faqCategoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_10dp"
                android:paddingBottom="@dimen/padding_4dp"
                android:text="기타"
                android:textColor="@color/black"
                android:textSize="@dimen/size_16dp" />

            <TextView
                android:id="@+id/questionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_8dp"
                android:paddingBottom="@dimen/padding_4dp"
                android:text="핸드타월 어떻게 배출하나요?"
                android:textSize="@dimen/size_16dp" />

            <View
                android:layout_width="@dimen/size_280dp"
                android:layout_height="@dimen/size_1dp"
                android:background="@color/faq_line_color"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>