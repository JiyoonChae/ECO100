<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/content_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ecobox_size_126dp"
        android:src="@drawable/ecobox_content_banner_top"
        android:contentDescription="@string/content_banner_description" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ecobox_content_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
