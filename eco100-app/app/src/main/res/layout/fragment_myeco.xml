<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frame_my_eco"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/icon_profile"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/icon_profile" />

    <TextView
        android:id="@+id/my_nickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="54dp"
        android:gravity="center"
        android:text="팡팡이"
        android:textColor="#39BDC8"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/my_board_list_frame"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_my_board_list"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="36dp"
            app:srcCompat="@drawable/icon_my_eco1"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/my_board_list"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_marginRight="36dp"
            android:text="내가 쓴 글 조회하기"
            android:textColor="#8CD698"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="12dp"
            android:layout_marginRight="30dp"
            app:srcCompat="@drawable/vector9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#39BDC8" />

    <LinearLayout
        android:id="@+id/my_comment_list_frame"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_my_comment_list"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="36dp"
            app:srcCompat="@drawable/icon_my_eco2"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/my_comment_list"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_marginRight="36dp"
            android:text="나의 댓글 조회하기"
            android:textColor="#8CD698"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="12dp"
            app:srcCompat="@drawable/vector9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#39BDC8" />

    <LinearLayout
        android:id="@+id/my_badge_list_frame"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_my_badge_list"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="36dp"
            app:srcCompat="@drawable/icon_my_eco3"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/my_badge_list"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_marginRight="36dp"
            android:text="나의 뱃지 조회하기"
            android:textColor="#8CD698"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="12dp"
            app:srcCompat="@drawable/vector9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#39BDC8" />

    <LinearLayout
        android:id="@+id/my_challenge_list_frame"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_my_challenge_list"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="36dp"
            app:srcCompat="@drawable/icon_my_eco4"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/my_challenge_list"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_marginRight="36dp"
            android:text="나의 챌린지 조회하기"
            android:textColor="#8CD698"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="6dp"
            android:layout_height="12dp"
            app:srcCompat="@drawable/vector9" />
    </LinearLayout>
</LinearLayout>

