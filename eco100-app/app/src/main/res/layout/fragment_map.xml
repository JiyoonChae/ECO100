<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:layout_marginStart="@dimen/margin_16dp"
            android:paddingTop="@dimen/padding_10dp">

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/mapBtn1"
                style="@style/Map.RadioBtnStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:button="@drawable/ic_map_garbage_shop"
                android:checked="true"
                android:text="종량제판매처" />

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/mapBtn2"
                style="@style/Map.RadioBtnStyle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:button="@drawable/ic_map_zero_shop"
                android:text="제로웨잇샵" />
        </RadioGroup>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="108dp"
        android:layout_height="26dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:background="@drawable/map_list_btn_background"
        android:drawableStart="@drawable/ic_map_list"
        android:fontFamily="@font/mapo_peacefull"
        android:paddingHorizontal="@dimen/padding_10dp"
        android:text="목록열기"
        android:textColor="@color/point_color"
        android:textSize="16sp"
        android:textStyle="bold" />
</FrameLayout>
