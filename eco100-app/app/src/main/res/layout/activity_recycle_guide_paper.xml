<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.ecobox.RecycleGuideActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_18dp"
        android:layout_marginRight="@dimen/margin_18dp"
        android:layout_marginBottom="@dimen/ecobox_margin_30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/guide_imageView"
            android:layout_width="match_parent"
            android:layout_height="736dp"
            app:srcCompat="@drawable/recycle_guide_paper" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>