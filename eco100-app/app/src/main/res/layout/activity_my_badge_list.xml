            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn7"
                android:layout_width="@dimen/size_48dp"
                android:layout_height="@dimen/size_48dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:layout_marginTop="@dimen/margin_40dp"
