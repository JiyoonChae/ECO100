            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/btn9"
                android:layout_width="@dimen/size_48dp"
                android:layout_height="@dimen/size_48dp"
                android:layout_marginTop="@dimen/margin_40dp"
