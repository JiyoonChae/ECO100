<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.myeco.MyBadgeListActivity">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="384dp"
        android:layout_height="@dimen/size_60dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_12dp"
        android:layout_marginBottom="@dimen/size_28dp"
        app:srcCompat="@drawable/my_eco_badge"
        />

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/my_badge_frame"
        android:layout_marginBottom="@dimen/size_28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn1"
                    android:layout_width="@dimen/size_48dp"
                    android:layout_height="@dimen/size_48dp"
                    android:layout_marginBottom="@dimen/margin_10dp"
                    android:layout_marginTop="@dimen/margin_40dp"
                    app:srcCompat="@drawable/btn1" />

                <TextView
                    android:id="@+id/my_badge_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최초 가입"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn2"
                    android:layout_width="@dimen/size_48dp"
                    android:layout_height="@dimen/size_48dp"
                    android:layout_marginTop="@dimen/margin_40dp"
                    android:layout_marginBottom="@dimen/margin_10dp"
                    app:srcCompat="@drawable/btn2" />

                <TextView
                    android:id="@+id/my_badge_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최초 글쓰기" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/btn3"
                    android:layout_width="@dimen/size_48dp"
                    android:layout_height="@dimen/size_48dp"
                    android:layout_marginTop="@dimen/margin_40dp"
                    android:layout_marginBottom="@dimen/margin_10dp"
                    app:srcCompat="@drawable/btn3" />

                <TextView
                    android:id="@+id/my_badge_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최초 댓글" />
            </LinearLayout>


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
